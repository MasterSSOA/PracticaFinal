@page
@model IndexModel
@{
    ViewData["Title"] = "Login";
}

<div class="sidenav">
    <div class="login-main-text">
        <h2>Banco<br> PracticaFinal</h2>
        <p>Un ambiente facil para ver tus cuentas y realizar transacciones.</p>
    </div>
</div>
<div class="main">
    <div class="col-md-6 col-sm-12">
        <div class="login-form">
            <form method="post">
                <div class="form-group">
                    <label>Usuario</label>
                    <input type="text" asp-for="@Model.user.UserName" class="form-control" placeholder="Usuario">
                    <span asp-validation-for="@Model.user.UserName" class="alert-danger"></span>
                </div>
                <div class="form-group">
                    <label>Contraseña</label>
                    <input type="password" asp-for="@Model.user.UserPass" class="form-control" placeholder="Contraseña">
                    <span asp-validation-for="@Model.user.UserPass" class="alert-danger"></span>
                </div>
                <button type="submit" class="btn btn-black">Iniciar Sesión</button>
            </form>
        </div>
    </div>
</div>