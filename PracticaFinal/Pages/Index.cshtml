@page
@model IndexModel
@{
    ViewData["Title"] = "Login";
}

<div class="text-center">
    <h4 class="display-4">Welcome</h4>
</div>

<form method="post">
    <div class="form-group">
        <label>UserName</label>
        <input type="text" class="form-control" asp-for="@Model.user.UserName" placeholder="User Name" />
        <span asp-validation-for="@Model.user.UserName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Password</label>
        <input type="password" class="form-control" asp-for="@Model.user.UserPass" placeholder="Password" />
        <span asp-validation-for="@Model.user.UserPass" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
</form>
