@page

@model PracticaFinal.Pages.HomeModel
@{
    ViewData["Title"] = "Principal";
}

<div>
    <h5>
        Bienvendo, @Model.client.ClientFullName
        <br>@DateTime.Now.ToString("dd MMMM, yyyy")
    </h5>
    <br />
    <p>Cuentas Bancarias:</p>
</div>
<div class="span2">

    <form method="post">
        <input id="inAccountNumber" type="hidden" asp-for="@Model.AccountNumber" />
        @foreach (var account in Model.accounts)
        {
            <div class="btn-block">
                <button type="submit" class="btn btn-outline-secondary btn-block" onclick="getAccountNumber(@account.AccountNumber)">
                    <span class="float-left">
                        Ahorro o Corriente / @account.AccountNumber
                    </span>
                    <br />
                    <span class="float-left" style="color: #000000">
                        Balance :
                    </span>
                    <span class="float-right">
                        @("RD$ " + string.Format("{0:0,0.00}", account.AccountBalance))
                    </span>
                </button>
            </div>
        }
    </form>
</div>