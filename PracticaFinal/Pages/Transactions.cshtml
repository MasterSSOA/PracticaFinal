@page
@model PracticaFinal.Pages.TransactionsModel
@{
    ViewData["Title"] = "Transacciones";
}

<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.24.0/moment.min.js"></script>
<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>


<div>
    <h3>Transacciones</h3>
    <br />
    <h4>Ahorro o Corriente / @Model.AccountNumber</h4>
    <br />
</div>
<div>
    <div>
        <label>Fecha inicial:</label>
        &emsp;&emsp;&emsp;&emsp;&emsp;&emsp;
        <label>Fecha final:</label>
    </div>
    <form id="dateForm" method="post">
        <div>
            <input id="date1" type="date" asp-for=@Model.date1 />&emsp;
            <input id="date2" type="date" asp-for=@Model.date2 />
            <span id="dateError" class="alert-danger"></span>
            <br />
        </div>
    </form>
</div>
<div>
    <br />
    @foreach (var transaction in Model.transactions)
    {
        <button type="submit" class="btn btn-outline-secondary btn-block">
            <span class="float-left">
                @transaction.TransDescription
            </span>
            <br />
            <span class="float-left" style="color: #000000">
                @transaction.TransDate
            </span>
            <span class="float-right">
                @if (Model.AccountNumber.Equals(transaction.AccountFrom))
                {
                    <span style="color:darkred"> @("RD$ -" + string.Format("{0:0,0.00}", transaction.Amount)) </span>
                }
                else
                {
                    <span style="color:darkslategrey">@("RD$ +" + string.Format("{0:0,0.00}", transaction.Amount))</span>
                }

            </span>
        </button>
    }
</div>


